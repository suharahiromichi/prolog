pred common i:int, i:int, o:eq.
common M N E :-
   ax M (L1 => R1),
   ax N (L2 => R2),
   cpair (L1 => R1) (L2 => R2) (C1 => C2),
   intro (C1 => C2),
   reduce C1 C1',
   reduce C2 C2',
   (C1' >> C2', !, E = (C1' => C2'); E = (C2' => C1')),
   print "C1 => C2 :" E.

