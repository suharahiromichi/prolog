pred unify i:tm, i:tm, o:tm, o:tm, o:tm, o:tm, o:tm, o:tm.
unify L' L X' Y' Z' X Y Z :-
      generalize L' F',
      generalize L F,
      F' X' Y' Z' = F X Y Z,
      print "L'=" (F' X' Y' Z'),
      print "L=" (F X Y Z),
      print "X'=" X',
      print "Y'=" Y',
      print "Z'=" Z',
      print "X=" X,
      print "Y=" Y,
      print "Z=" Z.

pred cpair i:eq, i:eq, o:eq.
cpair (L1 => R1) (L2 => R2) (Z_R1 => Z_CTX_R2) :-
   print "L1=" L1 ", R1=" R1,
   print "L2=" L2 ", R2=" R2,
/*
   L2' = a + b,
   C2' = (x\ x + c),
   L1 = C2' L2',
*/
   mksubtm L1 L2' C2',
   unify L2' L2 X' Y' Z' X Y Z,
   generalize R1 FR1,
   generalize R2 FR2,
   Z_R1 = FR1 X' Y' Z',           % R1

   generalize2 C2' FC2',
   Z_CTX_R2 = FC2' (FR2 X Y Z) X' Y' Z',
   print "σR1=" Z_R1,
   print "σCTX R2=" Z_CTX_R2.

