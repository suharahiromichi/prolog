pred red i:tm, i:eq, o:tm.
/* 外側優先とする。 */
red T1 (R => L) T2 :-
   generalize R FR,
   generalize L FL,
   T1 = FR X Y Z,
   T2 = FL X Y Z.
red (A + B) E (A1 + B1) :-
    (red A E A1; A = A1),
    (red B E B1; B = B1).
red (~ A) E (~ A1) :-
    (red A E A1; A = A1).

